{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es6",
    "module": "es2015",
    "lib": ["esnext", "dom"],
    "strict": true,
    "declaration": false,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["node_modules/@types"],
    "sourceMap": false,
    "inlineSourceMap": true,
    "esModuleInterop": true,
    "types": ["node", "jest"],
    "noEmit": true
  },
  "include": ["src", "test"]
}
